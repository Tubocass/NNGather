#unity-checkmark {
    min-width: 50px;
    min-height: 50px;
    bottom: 0;
}

#player-toggle {
    font-size: 40px;
    height: 100%;
    align-items: center;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    justify-content: space-between;
    flex-direction: row-reverse;
}

#player-toggle > .unity-label {
}

.emptySlot {
    height: 100px;
    background-color: rgb(118, 118, 118);
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.teamSelect {
    height: 100px;
    background-color: rgb(152, 152, 152);
    flex-direction: row;
    align-items: center;
}

.team-select__button {
    align-items: center;
    justify-content: center;
    right: 0;
    min-width: 80px;
    min-height: 80%;
    background-color: rgba(0, 0, 0, 0);
}

.unity-base-popup-field__label {
    display: none;
}

.unity-list-view__item {
    background-color: rgb(0, 27, 255);
    font-size: 28px;
}

.unity-base-field__input {
    font-size: 28px;
    background-color: rgb(255, 155, 155);
}

.unity-base-dropdown__item {
    background-color: rgb(18, 250, 25);
}

.color-option {
    flex-grow: 1;
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    min-width: 80px;
    min-height: 40px;
    background-image: none;
    max-width: 150px;
    max-height: 80px;
}

.colorPicker {
    width: 100px;
    height: 50px;
    background-color: rgb(255, 255, 255);
    -unity-background-image-tint-color: rgb(255, 255, 255);
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    border-bottom-left-radius: 6px;
    overflow: visible;
    flex-wrap: wrap;
    flex-direction: row;
    flex-grow: initial;
    flex-shrink: 1;
}

.colorContainer {
    height: auto;
    width: auto;
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    background-color: rgb(152, 152, 152);
    overflow: visible;
    visibility: visible;
    flex-direction: column;
    flex-wrap: wrap;
    flex-grow: 1;
    display: none;
    align-items: flex-start;
    position: absolute;
    top: -25px;
    max-width: 600px;
    max-height: 100px;
    min-width: 100px;
    min-height: 50px;
}

.highlight {
    border-left-color: rgb(248, 210, 9);
    border-right-color: rgb(248, 210, 9);
    border-top-color: rgb(248, 210, 9);
    border-bottom-color: rgb(248, 210, 9);
    border-top-width: 5px;
    border-right-width: 5px;
    border-bottom-width: 5px;
    border-left-width: 5px;
    flex-grow: 1;
}

.grayout {
    flex-grow: 1;
    background-color: rgba(128, 128, 128, 0.54);
    background-image: url('project://database/Assets/Gather/Sprites/grayX.png?fileID=21300000&guid=dd67709931b3a62458989458a61d6f56&type=3#grayX');
}
